{
  "$schema": "http://json.schemastore.org/template",
  "author": "Aardvark Platform contributors",
  "classifications": [ "Console" ], 
  "name": "Aardvark.Rendering Application",
  "identity": "Aardvark.Template.Rendering.FSharp",         
  "groupIdentity": "Aardvark.Template.Rendering",
  "shortName": "aardvark.rendering",
  "tags": {
    "language": "F#",
    "type": "project"
  },
  "sourceName": "Aardvark.Template.Rendering",
  "preferNameDirectory": true,
  "symbols": {
    "backend": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "opengl",
      "choices": [
        {
          "choice": "opengl"
        },
        {
          "choice": "vulkan"
        }
      ],
      "description": "Graphical API will be used for rendering your application"
    }
  },
  "sources": [
    {
      "exclude": [ "Aardvark.Template.Rendering*.fsproj", "Program*.fs"],
      "modifiers":[
        {
          "include": "Aardvark.Template.Rendering.OpenGL.fsproj",
          "condition": "(backend == \"opengl\")",
          "rename": {"Aardvark.Template.Rendering.OpenGL.fsproj": "Aardvark.Template.Rendering.fsproj"}
        },
        {
          "include": "Aardvark.Template.Rendering.Vulkan.fsproj",
          "condition": "(backend == \"vulkan\")",
          "rename": {"Aardvark.Template.Rendering.Vulkan.fsproj": "Aardvark.Template.Rendering.fsproj"}
        },
        {
          "include": "Program.OpenGL.fs",
          "condition": "(backend == \"opengl\")",
          "rename": {"Program.OpenGL.fs": "Program.fs"}
        },
        {
          "include": "Program.Vulkan.fs",
          "condition": "(backend == \"vulkan\")",
          "rename": {"Program.Vulkan.fs": "Program.fs"}
        }
      ]
    }
  ]
}